(SELECT ci_ruc FROM sgm_app.cat_ente e WHERE e.id = c.razon_social) as ci_ruc,
(SELECT e.nombres || ' ' || e.apellidos FROM sgm_app.acl_user u
INNER JOIN sgm_app.cat_ente e
ON u.ente = e.id
WHERE u.id = c.user_creador) as nombre_user, anio, fecha_creacion,
    (SELECT razon_social from sgm_application.empresa) AS nombre_empresa

