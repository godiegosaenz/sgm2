<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="detalle_cobro" pageWidth="100" pageHeight="13" whenNoDataType="AllSectionsNoDetail" columnWidth="100" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0" uuid="6160660b-6f1c-4082-bec1-ed1844f56d9e">
	<property name="ireport.zoom" value="4.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<parameter name="ID_LIQUIDACION" class="java.lang.Long">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<parameter name="TIPO_PAGO" class="java.lang.Integer">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<parameter name="NUM_COMPROBANTE" class="java.lang.Long">
		<defaultValueExpression><![CDATA[]]></defaultValueExpression>
	</parameter>
	<parameter name="valorBombero" class="java.math.BigDecimal">
		<defaultValueExpression><![CDATA[java.math.BigDecimal.ZERO]]></defaultValueExpression>
	</parameter>
	<queryString>
		<![CDATA[SELECT
        SUM (REN_PAGO_DETALLE.VALOR) AS valor,
        (select max(d.valor) from sgm_financiero.ren_pago_detalle d
where d.pago = $P{ID_LIQUIDACION} GROUP BY d.tipo_pago limit 1) as MAX
FROM
       sgm_financiero.REN_PAGO_DETALLE REN_PAGO_DETALLE
       LEFT OUTER JOIN sgm_financiero.REN_PAGO REN_PAGO ON REN_PAGO_DETALLE.PAGO = REN_PAGO.ID
WHERE
       REN_PAGO.LIQUIDACION = $P{ID_LIQUIDACION}
   AND REN_PAGO_DETALLE.TIPO_PAGO = $P{TIPO_PAGO}
AND REN_PAGO.NUM_COMPROBANTE=$P{NUM_COMPROBANTE}]]>
	</queryString>
	<field name="valor" class="java.math.BigDecimal"/>
	<field name="max" class="java.math.BigDecimal"/>
	<variable name="MOSTRAR" class="java.lang.Boolean" incrementType="Report">
		<variableExpression><![CDATA[($F{valor}.compareTo($F{max}) == 0)? true : false]]></variableExpression>
	</variable>
	<summary>
		<band height="13">
			<textField pattern="$ #,##0.00">
				<reportElement uuid="e82ad8b4-f0df-4ae6-a97e-70c487a35276" x="0" y="0" width="100" height="13"/>
				<textElement textAlignment="Right" verticalAlignment="Middle">
					<font size="8" isBold="true"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{valor} == null? "$0.00" : ($F{valor}.subtract($P{valorBombero}))]]></textFieldExpression>
			</textField>
		</band>
	</summary>
</jasperReport>
